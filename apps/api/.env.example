# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/autopwn

# Redis (for Bull queues)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# Authentication
AUTH_SECRET=your-secret-key-here-min-32-chars-long-please
AUTH_URL=http://localhost:3001/auth

# JWT
JWT_SECRET=your-jwt-secret-here-min-32-chars-long-please

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Email (optional, for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@autopwn.local

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Background Jobs
DEFAULT_JOB_TIMEOUT=300000
MAX_CONCURRENT_JOBS=5

# Security
CORS_ORIGIN=http://localhost:3000
