{
  "name": "@crackhouse/api",
  "version": "1.0.0",
  "description": "CrackHouse API Server",
  "main": "src/index-minimal.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "echo 'Build skipped - using tsx for production'",
    "start": "tsx src/index.ts",
    "worker": "tsx src/workers/index.ts",
    "worker:email": "tsx src/workers/email-worker.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed-superuser": "tsx src/db/seed-superuser.ts",
    "db:seed-config": "tsx src/db/seed-config.ts",
    "db:seed-all": "npm run db:seed-superuser && npm run db:seed-config",
    "queue:stats": "tsx -e \"import('./src/lib/queue').then(m => m.checkQueueHealth()).then(console.log)\"",
    "worker:health": "tsx -e \"import('./src/workers').then(m => m.checkWorkerHealth()).then(console.log)\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/client": "^7.2.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.11",
    "bullmq": "^5.66.5",
    "dotenv-flow": "^4.1.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.3",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "postgres": "^3.4.8",
    "prisma": "^7.2.0",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.5",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
