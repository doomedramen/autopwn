{
  "name": "@autopwn/api",
  "version": "1.0.0",
  "description": "AutoPWN API Server",
  "main": "src/index-minimal.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:real": "vitest run --config vitest.integration-real.config.ts",
    "test:watch": "vitest --config vitest.unit.config.ts",
    "test:coverage": "vitest run --config vitest.unit.config.ts --coverage",
    "test:coverage:all": "vitest run --coverage",
    "test:coverage:report": "vitest run --config vitest.unit.config.ts --coverage && open coverage/index.html",
    "test:ui": "vitest --ui",
    "test:dev": "NODE_ENV=test tsx watch src/index.ts",
    "test:start": "NODE_ENV=test node dist/index.js",
    "test:build": "NODE_ENV=test tsc",
    "test:seed": "NODE_ENV=test tsx src/db/seed-superuser.ts",
    "test:migrate": "NODE_ENV=test tsx src/db/migrate.ts",
    "test:db:push": "NODE_ENV=test drizzle-kit push",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "worker": "tsx src/workers/index.ts",
    "worker:email": "tsx src/workers/email-worker.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed-superuser": "tsx src/db/seed-superuser.ts",
    "db:seed-superuser:test": "NODE_ENV=test tsx src/db/seed-superuser.ts",
    "db:seed-config": "tsx src/db/seed-config.ts",
    "db:seed-all": "npm run db:seed-superuser && npm run db:seed-config",
    "queue:stats": "tsx -e \"import('./src/lib/queue').then(m => m.checkQueueHealth()).then(console.log)\"",
    "worker:health": "tsx -e \"import('./src/workers').then(m => m.checkWorkerHealth()).then(console.log)\""
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/zod-validator": "^0.7.4",
    "@prisma/client": "^6.17.1",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.28",
    "bullmq": "^5.61.0",
    "dotenv-flow": "^4.1.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "prisma": "^6.17.1",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@testcontainers/postgresql": "^10.17.0",
    "@testcontainers/redis": "^10.17.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "supertest": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vite-node": "^2.1.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
