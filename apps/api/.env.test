# Test Environment
NODE_ENV=test
PORT=3001

# Test Database - Uses a separate test database
# Uses port 5433 to match E2E testing docker-compose
DATABASE_URL=postgresql://postgres:password@localhost:5433/crackhouse_test

# Redis (for Bull queues) - disabled in tests
# Uses port 6380 to match E2E testing docker-compose
REDIS_URL=redis://localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380

# Authentication
AUTH_SECRET=test-secret-key-min-32-chars-long-please-for-testing
AUTH_URL=http://localhost:3001/auth

# JWT
JWT_SECRET=test-jwt-secret-min-32-chars-long-please-for-testing

# File Upload
UPLOAD_DIR=./uploads/test
MAX_FILE_SIZE=100MB
MAX_DICTIONARY_SIZE=1GB

# Email (disabled in tests)
# SMTP_HOST=

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Background Jobs
DEFAULT_JOB_TIMEOUT=300000
MAX_CONCURRENT_JOBS=5

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000
