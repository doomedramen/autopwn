# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=4000
LOG_LEVEL=debug
FRONTEND_URL=http://localhost:3000

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://autopwn:dev_password@localhost:5432/autopwn_dev
DATABASE_POOL_MAX=10
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# ============================================
# Redis (Job Queue)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3

# ============================================
# Authentication (Better Auth)
# ============================================
SESSION_SECRET=development_secret_change_in_production_minimum_32_chars
SESSION_MAX_AGE=604800  # 7 days

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./dev_data/uploads

# File size limits (in bytes)
MAX_PCAP_SIZE=104857600          # 100MB
MAX_DICTIONARY_SIZE=1073741824   # 1GB

# ============================================
# Hashcat Configuration
# ============================================
HASHCAT_BINARY_PATH=/usr/bin/hashcat
HASHCAT_WORKLOAD_PROFILE=2
HASHCAT_JOB_TIMEOUT=86400  # 24 hours
MAX_CONCURRENT_JOBS=2

# ============================================
# hcxpcapngtool Configuration
# ============================================
HCXPCAPNGTOOL_BINARY_PATH=/usr/bin/hcxpcapngtool

# ============================================
# Dictionary Generation
# ============================================
CRUNCH_BINARY_PATH=/usr/bin/crunch
MAX_GENERATED_DICT_SIZE=104857600  # 100MB
MAX_GENERATION_KEYWORDS=10

# ============================================
# Security
# ============================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000  # 1 minute

# ============================================
# Development / Seed Data
# ============================================
INITIAL_SUPERUSER_EMAIL=admin@autopwn.local
INITIAL_SUPERUSER_PASSWORD=changeme123
