# ============================================
# Application
# ============================================
NODE_ENV=development
BACKEND_PORT=4000
FRONTEND_URL=http://localhost:3000

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://autopwn:dev_password@localhost:5432/autopwn_dev

# ============================================
# Redis (Job Queue)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication (Better Auth)
# ============================================
SESSION_SECRET=development_secret_change_in_production
SESSION_MAX_AGE=604800
BCRYPT_ROUNDS=10

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./dev_data/uploads
PROCESSED_DIR=./dev_data/processed
GENERATED_DIR=./dev_data/generated
HASHCAT_DIR=./dev_data/hashcat
LOG_DIR=./dev_data/logs

# File size limits (in bytes)
MAX_PCAP_SIZE=52428800          # 50MB for dev
MAX_DICTIONARY_SIZE=1073741824  # 1GB for dev

# ============================================
# Hashcat Configuration
# ============================================
HASHCAT_MAX_CONCURRENT_JOBS=1
HASHCAT_DEFAULT_WORKLOAD=2
HASHCAT_JOB_TIMEOUT=600  # 10 minutes for dev

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
PRETTY_LOGS=true

# ============================================
# Security
# ============================================
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_ENABLED=false  # Disabled for dev

# ============================================
# Development
# ============================================
BULL_BOARD_ENABLED=true
BULL_BOARD_PATH=/admin/queues
