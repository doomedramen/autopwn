FROM node:24-bookworm

# Install pnpm
RUN corepack enable

# Install system dependencies
RUN apt-get update && apt-get install -y \
    hashcat \
    hcxtools \
    ocl-icd-opencl-dev \
    pocl-opencl-icd \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./
COPY pnpm-workspace.yaml ./
COPY packages/shared/package*.json ./packages/shared/
COPY apps/backend/package*.json ./apps/backend/

# Install ALL dependencies (including dev dependencies)
# Skip postinstall scripts for development to avoid git dependency
RUN pnpm install --frozen-lockfile --ignore-scripts

# Copy source code (will be overridden by volume mounts in development)
COPY packages/shared ./packages/shared
COPY apps/backend ./apps/backend

# Build shared package once (needed for TypeScript compilation)
WORKDIR /app/packages/shared
RUN pnpm run build

EXPOSE 3001

# Development command - will run in watch mode with hot reloading
WORKDIR /app/apps/backend
CMD ["pnpm", "dev"]