# AutoPWN Environment Configuration Example
# Copy this file to .env.local and customize with secure values

# Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@localhost:5432/autopwn_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
PORT=3001

# Authentication (MUST be changed for production)
AUTH_SECRET=GENERATE_SECURE_32_CHAR_SECRET_HERE
AUTH_URL=http://localhost:3001/auth
JWT_SECRET=GENERATE_SECURE_32_CHAR_JWT_SECRET_HERE

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Background Job Configuration
DEFAULT_JOB_TIMEOUT=300000
MAX_CONCURRENT_JOBS=5

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Development Tools Configuration
ADMINER_ENABLED=true
REDIS_COMMANDER_ENABLED=true

# Docker-specific Settings
COMPOSE_PROJECT_NAME=autopwn
COMPOSE_FILE=docker-compose.yml