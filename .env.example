# ============================================
# Application
# ============================================
NODE_ENV=development
APP_NAME=autopwn
APP_URL=http://localhost:3000

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://autopwn:dev_password@localhost:5432/autopwn_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=autopwn_dev
DATABASE_USER=autopwn
DATABASE_PASSWORD=dev_password
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# Redis (Job Queue)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Authentication (Better Auth)
# ============================================
SESSION_SECRET=development_secret_change_in_production
SESSION_MAX_AGE=604800
BCRYPT_ROUNDS=10

# Initial superuser (leave password empty to auto-generate)
INITIAL_SUPERUSER_EMAIL=admin@autopwn.local
INITIAL_SUPERUSER_PASSWORD=

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./dev_data/uploads
PROCESSED_DIR=./dev_data/processed
GENERATED_DIR=./dev_data/generated
HASHCAT_DIR=./dev_data/hashcat
LOG_DIR=./dev_data/logs

# File size limits (in bytes)
MAX_PCAP_SIZE=52428800          # 50MB for dev
MAX_DICTIONARY_SIZE=1073741824  # 1GB for dev
MAX_GENERATED_DICT_SIZE=2147483648  # 2GB for dev

# ============================================
# Hashcat Configuration
# ============================================
HASHCAT_MAX_CONCURRENT_JOBS=1
HASHCAT_DEFAULT_WORKLOAD=2
HASHCAT_JOB_TIMEOUT=600  # 10 minutes for dev
HASHCAT_BINARY=/usr/bin/hashcat
HASHCAT_STATUS_INTERVAL=5

# ============================================
# hcxtools Configuration
# ============================================
HCXPCAPNGTOOL_BINARY=/usr/bin/hcxpcapngtool

# ============================================
# Dictionary Generation
# ============================================
CRUNCH_BINARY=/usr/bin/crunch
MAX_GENERATION_KEYWORDS=50
MAX_DICTIONARY_LINES=0

# ============================================
# Job Queue (BullMQ)
# ============================================
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000
REMOVE_ON_COMPLETE=false
REMOVE_ON_FAIL=false
CONVERSION_QUEUE_CONCURRENCY=2
GENERATION_QUEUE_CONCURRENCY=2

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
PRETTY_LOGS=true

# ============================================
# Security
# ============================================
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_ENABLED=false  # Disabled for dev
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ============================================
# Development
# ============================================
DEV_MODE=true
BULL_BOARD_ENABLED=true
BULL_BOARD_PATH=/admin/queues
