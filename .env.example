# GPU Configuration
# Options: nvidia, amd, intel, cpu
HASHCAT_DEVICE_TYPE=cpu

# Database
DATABASE_PATH=/data/db/autopwn.db

# Paths
DICTIONARIES_PATH=/data/dictionaries
INPUT_PATH=/data/input
INTERMEDIATE_PATH=/data/intermediate
COMPLETED_PATH=/data/completed
FAILED_PATH=/data/failed
HASHES_PATH=/data/hashes

# Batch Processing
# Enable batch mode to combine multiple pcap files into one hashcat job
BATCH_MODE_ENABLED=false
# Wait time (seconds) for more files before creating batch
BATCH_QUIET_PERIOD=60
# Maximum wait time (seconds) before forcing batch creation
BATCH_MAX_WAIT=300
# Minimum files to create a batch (1 = always batch)
BATCH_MIN_FILES=1
# Maximum files per batch
BATCH_MAX_FILES=50

# Dashboard
NEXT_PUBLIC_API_URL=http://localhost:3000
