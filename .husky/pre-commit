echo "ğŸ” Running pre-commit checks..."

# Run type check on all files
echo "ğŸ“ Running type check..."
pnpm typecheck

# Run lint-staged on staged files
echo "ğŸ”§ Running lint-staged..."
npx lint-staged

# Auto-bump package version if package.json was changed
if git diff --cached --name-only | grep -q "package.json"; then
  echo "ğŸ“¦ Auto-bumping package version..."
  npx -y package-bump@latest patch --stage
else
  echo "ğŸ“¦ No package.json changes detected, skipping version bump"
fi

echo "âœ… All pre-commit checks passed!"
