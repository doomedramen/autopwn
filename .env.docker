# AutoPWN Docker Environment Configuration
# Copy this file to .env.local and customize as needed

# Environment
NODE_ENV=development

# Database Configuration (for Docker)
DATABASE_URL=postgresql://postgres:password@localhost:5432/autopwn_development

# Redis Configuration (for Docker)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
PORT=3001

# Authentication
AUTH_SECRET=your-secret-key-here-min-32-chars-long-please-change-in-production
AUTH_URL=http://localhost:3001/auth
JWT_SECRET=your-jwt-secret-here-min-32-chars-long-please-change-in-production

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Background Job Configuration
DEFAULT_JOB_TIMEOUT=300000
MAX_CONCURRENT_JOBS=5

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Development Tools Configuration
ADMINER_ENABLED=true
REDIS_COMMANDER_ENABLED=true

# Docker-specific Settings
COMPOSE_PROJECT_NAME=autopwn
COMPOSE_FILE=docker-compose.yml