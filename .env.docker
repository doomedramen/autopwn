# AutoPWN Docker Environment Configuration
# Copy this file to .env.local and customize as needed

# Environment
NODE_ENV=development

# Database Configuration (for Docker)
# These should be overridden with secure values in production
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD:-password}@localhost:5432/autopwn_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Redis Configuration (for Docker)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
PORT=3001

# Authentication
# These MUST be changed to secure values in production
AUTH_SECRET=CHANGE_ME_IN_PRODUCTION_MIN_32_CHARS
AUTH_URL=http://localhost:3001/auth
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_MIN_32_CHARS

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Background Job Configuration
DEFAULT_JOB_TIMEOUT=300000
MAX_CONCURRENT_JOBS=5

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Development Tools Configuration
ADMINER_ENABLED=true
REDIS_COMMANDER_ENABLED=true

# Docker-specific Settings
COMPOSE_PROJECT_NAME=autopwn
COMPOSE_FILE=docker-compose.yml