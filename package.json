{
  "name": "crackhouse",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "knip": "knip",
    "test:e2e": "docker compose -f testing/docker/docker-compose.e2e.yml up --abort-on-container-exit --build",
    "test:e2e:build": "docker build -f testing/docker/Dockerfile.e2e -t crackhouse-e2e .",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@evilmartians/lefthook": "^2.0.14",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.6",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "knip": "^5.80.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.4",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0"
    }
  }
}
